{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["dom", "dom.iterable", "esnext", "esnext.disposable"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@share/*": ["./packages/share/*"],
			"@crawl/*": ["./packages/crawl/*"],
			"@update-projects/*": ["./packages/update-projects/*"]
		}
	},
	"include": [],
	"exclude": ["node_modules", "**/dist"]
}
